<div>
    <h1 class="display-4" mb-4>Welcome4</h1>
    <div class="h4">
        @{
            int n = Model.Num * 2;
            <Text>※整数 @Model.Num の2倍は、 @n です。</Text>
        }
    </div>
</div>

@functions{
    string hello(string name)
    {
        return "Hello," + name + "!!";
    }

    int total(int n)
    {
        int re = 0;

        for(int i=1; i<=n; i++)
        {
            re += i;
        }

        return re;
    }
}

<div>
